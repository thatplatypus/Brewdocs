@using BlazorBootstrap

<Tooltip Title="@_tooltip">
    <Icon CustomIconName="@($"icon-col {_iconName}")" />
</Tooltip>

@code {
    [Parameter]
    public string FileExtension { get; set; }

    public string _iconName => FileExtension switch
    {
        "docx" => "icon-docx",
        "xlsx" => "icon-xlsx",
        "pdf" => "icon-pdf",
        "pptx" => "icon-pptx",
        "png" => "icon-img",
        _ => "icon-default"
    };

    public string _tooltip => FileExtension switch
    {
        "docx" => "Word",
        "xlsx" => "Excel",
        "pdf" => "PDF",
        "pptx" => "Powerpoint",
        "png" => "Image",
        _ => "Unknown"
    };
}

